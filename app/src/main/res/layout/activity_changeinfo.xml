<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/changeinfo_top_lin"
    android:background="@drawable/set_xiugai_bac">

    <!--<include layout="@layout/activity_include_title_bar"/>-->
    <include
        layout="@layout/activity_include_title_bar"
        />
    <ImageView
        android:id="@+id/changeinfo_iv_qrcode"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        app:srcCompat="@drawable/friend_data_ercode"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/dp10"
        android:layout_gravity="right"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp20"
        >
        <RelativeLayout

            android:id="@+id/changeinfo_re_head"
            android:layout_width="@dimen/dp110"
            android:layout_height="@dimen/dp110"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/changeinfo_c"
            >
            <ImageView
                android:id="@+id/changeinfo_iv_head"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                app:srcCompat ="@drawable/first_head_nor"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat ="@drawable/changeinfo_head"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"

                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_gravity="center_horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--昵称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称："
                        android:textSize="@dimen/sp16"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/changeinfo_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp16"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/dp5"
                        android:drawableRight="@drawable/change_icon"
                        />
                </LinearLayout>

            </RelativeLayout>

            <!--帐号-->
            <LinearLayout
                android:id="@+id/changeinfo_lin_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帐号："
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/changeinfo_tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:id="@+id/changeinfo_iv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    app:srcCompat="@drawable/change_icon" />
            </LinearLayout>
            <!--个签-->
            <LinearLayout
                android:id="@+id/changeinfo_lin_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个签："
                    android:textSize="@dimen/sp16"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/changeinfo_tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp16"
                    android:drawableRight="@drawable/change_icon"
                    android:textColor="@color/white"
                    android:text="暂未设置签名"
                    />

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="@dimen/dp5"-->
                    <!--app:srcCompat="@drawable/change_icon" />-->
            </LinearLayout>
            <!--<TextView-->
                <!--android:id="@+id/changeinfo_tv_sign"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/sp16"-->
                <!--android:drawableRight="@drawable/change_icon"-->
                <!--android:drawablePadding="@dimen/dp5"-->
                <!--android:layout_marginLeft="@dimen/dp10"-->
                <!--android:layout_marginRight="@dimen/dp10"-->
                <!--android:textColor="@color/white"-->
                <!--android:layout_marginTop="@dimen/dp10"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:text="对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术对生活的追求超过艺术"/>-->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_bg"
    android:id="@+id/fda_lin_main"
    android:orientation="vertical">
    <include layout="@layout/activity_include_title_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/fda_iv_head"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    app:srcCompat="@drawable/mine_head"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/dp10"
                    />
                <TextView
                    android:id="@+id/fda_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:textColor="@color/gray666"
                    android:text="龙哥（张龙龙）"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:textColor="@color/gray999"
                    android:text="个人介绍："/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    android:layout_margin="@dimen/dp10"
                    android:background="@drawable/btn_solid_stroke_white"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/fda_ed_yanzheng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:background="@null"
                        android:ems="20"
                        android:maxLength="50"
                        android:minEms="50"
                        android:hint="您好，我想进群."
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:minLines="4"
                        android:textSize="@dimen/sp16" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:layout_margin="@dimen/dp10"
                    android:textColor="@color/gray999"
                    android:text="设置群分组"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp10"
                        android:visibility="gone"
                        android:background="@drawable/good_friend_beizhu_top"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/gray999"
                            android:text="备注"/>
                        <EditText
                            android:id="@+id/fda_ed_beizhu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@null"
                            android:maxLength="8"
                            android:minEms="8"
                            android:layout_marginLeft="@dimen/dp10"
                            android:hint="android"
                            android:inputType="textMultiLine"
                            android:textSize="@dimen/sp16" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp10"
                        android:background="@drawable/good_friend_beizhu_top"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/gray999"
                            android:text="分组"/>
                        <TextView
                            android:id="@+id/fda_tv_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/gray999"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/in_right"
                            android:hint="点击选择设置群分组"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_alignParentBottom="true"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/white"
                android:background="@drawable/btn_stroke_sel"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:layout_margin="@dimen/dp30"
                android:text="加密聊天"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/white"
                android:background="@drawable/btn_stroke_sel"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp20"
                android:layout_margin="@dimen/dp30"
                android:paddingRight="@dimen/dp20"
                android:text="发送消息"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
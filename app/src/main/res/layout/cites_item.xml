<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_zimu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="A"
        android:textSize="@dimen/sp14"
        android:background="@color/grayeee"
        android:paddingLeft="@dimen/sp15"
        android:paddingBottom="@dimen/dp8"
        android:paddingTop="@dimen/dp8"
        android:textColor="@color/gray333"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_zimu"
    android:background="@color/white"
    android:orientation="horizontal">



    <ImageView
        android:id="@+id/seach_iv_close"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        app:srcCompat="@drawable/first_head_nor"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp10"
        />
    <TextView
        android:id="@+id/tv_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="城市"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp8"
        android:gravity="center_vertical"
        android:textColor="@color/gray666"
       />
</LinearLayout>
</RelativeLayout>

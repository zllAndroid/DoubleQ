<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_include_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_bac"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">
            <!--接收新消息提醒-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/msg_notification_accept_news"
                    android:textColor="@color/gray333"/>
                <com.suke.widget.SwitchButton
                    android:id="@+id/news_switch_jieshou_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    app:sb_show_indicator="false"
                    android:layout_gravity="center"
                    app:sb_uncheckcircle_color="@color/swi_nor"
                    app:sb_checked_color="@color/swi_select"
                    app:sb_checked="true"/>
            </LinearLayout>
            <!--接收语音邀请-->
            <View
                style="@style/style_wei_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/msg_notification_accept_voice"
                    android:textColor="@color/gray333"/>
                <com.suke.widget.SwitchButton
                    android:id="@+id/news_switch_jieshou_yuyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    app:sb_show_indicator="false"
                    app:sb_uncheckcircle_color="@color/swi_nor"
                    app:sb_checked_color="@color/swi_select"
                    android:layout_gravity="center"
                    app:sb_checked="true"/>
            </LinearLayout>
            <!--接收视频邀请-->
            <View
                style="@style/style_wei_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/msg_notification_accept_video"
                    android:textColor="@color/gray333"/>
                <com.suke.widget.SwitchButton
                    android:id="@+id/news_switch_jieshou_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sb_uncheckcircle_color="@color/swi_nor"
                    app:sb_checked_color="@color/swi_select"
                    android:padding="@dimen/dp10"
                    app:sb_show_indicator="false"
                    android:layout_gravity="center"
                    app:sb_checked="true"/>
            </LinearLayout>
            <!--推送显示内容-->
            <View
                style="@style/style_wei_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/msg_notification_show_push_content"
                    android:textColor="@color/gray333"/>
                <com.suke.widget.SwitchButton
                    android:id="@+id/news_switch_xianshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    app:sb_show_indicator="false"
                    android:layout_gravity="center"
                    app:sb_uncheckcircle_color="@color/swi_nor"
                    app:sb_checked_color="@color/swi_select"
                    app:sb_checked="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
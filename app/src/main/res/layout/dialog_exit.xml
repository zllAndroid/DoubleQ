<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="@dimen/dp280"
        android:layout_gravity="center"
        android:background="@drawable/bac_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!--信息一-->
            <RadioGroup
                android:id="@+id/exit_radioGroup"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp25"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioBtn_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/exit_check"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp20"
                    android:text="one"
                    android:textColor="@color/grey666"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/exit_check"
                    android:drawablePadding="10dp"
                    android:paddingLeft="@dimen/dp20"
                    android:text="second"
                    android:textColor="@color/gray666"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_dialog_negative"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bac_dialog_btn"
                android:text="取消"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <Button
                android:id="@+id/btn_dialog_positive"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bac_dialog_btn"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp40"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
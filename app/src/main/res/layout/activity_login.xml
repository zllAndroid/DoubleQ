<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/login_bac"
    >
    <include
        layout="@layout/login_include_title_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp45"
        android:layout_marginTop="@dimen/dp80"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/white"
                android:text="国家/地区"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:padding="@dimen/dp10"
                android:textSize="@dimen/sp18"
                android:textColor="@color/white"
                android:text="中国（+86）" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/login_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="@string/login_phone"
                android:minEms="11"
                android:maxLength="11"
                android:textColor="@color/white"
                android:inputType="phone"
                android:layout_marginTop="@dimen/dp30"
                android:textColorHint="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/login_ed_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minEms="20"
                android:maxLength="20"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:hint="@string/login_pwd"

                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp30"
                android:textColorHint="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/white"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <TextView
                android:id="@+id/login_tv_code_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:paddingRight="@dimen/dp5"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp14"
                android:text="短信登录"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
               >

                <TextView
                    android:id="@+id/login_tv_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="right|center_vertical"
                    android:paddingTop="@dimen/dp10"
                    android:textSize="@dimen/sp14"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingLeft="@dimen/dp5"
                    android:text="@string/login_change_to_msg_login"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp20"
        android:orientation="vertical">
        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_btn_login"
            android:layout_gravity="center"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_bac"/>
        <TextView
            android:id="@+id/login_tv_new_resgister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:layout_marginTop="@dimen/dp15"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/sp15"
            android:text="@string/login_change_to_register"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>

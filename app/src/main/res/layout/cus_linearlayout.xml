<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--灰色背景-->
    <LinearLayout
        android:id="@+id/cus_linearlayout_lin_grey_bac"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp20"
        android:background="@color/greyf3"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/cus_linearlayout_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cus_linearlayout_img_logo"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            app:srcCompat="@drawable/discover_animal_fuhua"/>
        <TextView
            android:id="@+id/cus_linearlayout_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp10"
            android:text="宠物孵化基地" />
        <ImageView
            android:id="@+id/cus_linearlayout_img_to_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10"
            app:srcCompat="@drawable/in_right" />
    </LinearLayout>

    <!--AI宠物学舌-->
    <View
        android:id="@+id/cus_linearlayout_view_line"
        style="@style/style_wei_line"
        />
</LinearLayout>
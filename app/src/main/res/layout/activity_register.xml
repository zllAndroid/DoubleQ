<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/login_bac">
    <include
        layout="@layout/login_include_title_bar"
        />

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none">-->

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical" >-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp45"
                android:layout_marginLeft="@dimen/dp45"
                android:layout_marginTop="@dimen/dp80"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp18"
                            android:textColor="@color/white"
                            android:text="国家/地区"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp30"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp18"
                            android:textColor="@color/white"
                            android:text="中国（+86）" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp30"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/reg_ed_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            android:hint="@string/login_phone"
                            android:minEms="11"
                            android:maxLength="11"
                            android:textColor="@color/white"
                            android:inputType="phone"
                            android:textColorHint="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp1"
                            android:layout_marginTop="@dimen/dp5"
                            android:background="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp30"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp5"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/reg_ed_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:textCursorDrawable="@null"
                                android:hint="@string/verification_code"
                                android:layout_weight="1"
                                android:minEms="6"
                                android:maxLength="6"
                                android:textColor="@color/white"
                                android:layout_gravity="bottom"
                                android:inputType="number"
                                android:textColorHint="@color/white"/>
                            <TextView
                                android:id="@+id/reg_tv_send_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_shape_login_train"
                                android:padding="@dimen/dp8"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:text="@string/login_get_code"/>
                        </LinearLayout>
                        <View
                            style="@style/style_wei_line"
                            android:background="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp30"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/reg_ed_psw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:minEms="20"
                            android:maxLength="20"
                            android:textCursorDrawable="@null"
                            android:inputType="textPassword"
                            android:hint="@string/login_pwd"
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/dp5"
                            android:textColorHint="@color/white"/>
                        <View
                            style="@style/style_wei_line"
                            android:background="@color/white"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp50"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/reg_btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_title"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/white"
                        android:background="@drawable/login_btn_bac"/>
                </LinearLayout>
            </RelativeLayout>
        <!--</LinearLayout>-->
    <!--</ScrollView>-->
</LinearLayout>

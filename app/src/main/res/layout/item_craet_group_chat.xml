<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/lin_check_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/item_creat_check"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:button="@drawable/checkbox_selector_creat_group_chat"
            android:focusable="false"
            android:clickable="false"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/item_creat_iv_head"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            app:srcCompat="@drawable/first_head_nor"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            />
        <TextView
            android:id="@+id/item_creat_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="城市"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp8"
            android:gravity="center_vertical"
            android:textColor="@color/gray666"
            />
    </LinearLayout>
</RelativeLayout>

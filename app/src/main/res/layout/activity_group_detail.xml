<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/group_detail_lin_main"
    tools:context=".about_chat.group_manage.GroupDetailActivity">

    <include layout="@layout/activity_include_title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mding.chatfeng.about_custom.CusScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grayeee"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_theme"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/group_detail_iv_head"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        app:srcCompat="@drawable/qun_head"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/dp10"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/group_detail_iv_qrcode"
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:src="@drawable/qun_code"
                            android:layout_alignParentRight="true"

                            android:layout_marginRight="@dimen/dp15"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/group_detail_lin_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/group_detail_tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp14"
                                    android:text=""/>
                                <ImageView
                                    android:id="@+id/group_detail_iv_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:layout_gravity="center"
                                    android:src="@drawable/change_icon"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/group_detail_tv_group_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp14"
                                android:text=""/>
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/group_detail_lin_intogrouplist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp10"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/group_detail_tv_chatnum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray666"
                        android:layout_marginBottom="@dimen/dp5"
                        android:drawableRight="@drawable/in_right"
                        android:text="@string/group_details_member"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="blocksDescendants">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/group_detail_recyc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fadingEdge="none"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--群管理-->
                    <com.mding.chatfeng.about_custom.about_linearlayout.CusLinearLayout
                        android:id="@+id/group_detail_cus_lin_manage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <!--群名片-->
                    <com.mding.chatfeng.about_custom.about_linearlayout.CusLinearLayout
                        android:id="@+id/group_detail_cus_lin_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <!--群公告-->
                    <LinearLayout
                        android:id="@+id/group_detail_lin_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <com.mding.chatfeng.about_custom.about_linearlayout.CusLinearLayout
                            android:id="@+id/group_detail_cus_lin_notice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/group_detail_tv_notice_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/grey999"
                            android:layout_height="@dimen/dp80"
                            android:text="@string/group_details_notice_none"
                            android:padding="@dimen/dp10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        >

                        <!--置顶聊天-->
                        <LinearLayout
                            android:id="@+id/group_chat_data_lin_to_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:focusable="true"
                            android:layout_marginBottom="@dimen/dp5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp15"
                                android:layout_weight="1"
                                android:text="@string/group_details_to_top"/>
                            <com.suke.widget.SwitchButton
                                android:id="@+id/group_detail_swibtn_to_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp10"
                                app:sb_show_indicator="false"
                                app:sb_uncheckcircle_color="@color/swi_nor"
                                app:sb_checked_color="@color/swi_select"
                                android:layout_gravity="center"
                                android:clickable="false"
                                app:sb_checked="false"/>
                        </LinearLayout>
                        <View
                            style="@style/style_wei_line"
                            />
                        <!--消息免打扰-->
                        <LinearLayout
                            android:id="@+id/group_chat_data_lin_nodarao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:focusable="true"
                            android:layout_marginBottom="@dimen/dp5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp15"
                                android:layout_weight="1"
                                android:text="@string/group_details_msg_no_disturb"/>
                            <com.suke.widget.SwitchButton
                                android:id="@+id/group_detail_swibtn_nodarao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp10"
                                app:sb_show_indicator="false"
                                app:sb_uncheckcircle_color="@color/swi_nor"
                                app:sb_checked_color="@color/swi_select"
                                android:layout_gravity="center"
                                android:clickable="false"
                                app:sb_checked="false"/>
                        </LinearLayout>
                        <View
                            style="@style/style_wei_line"
                            />
                        <!--收进群助手-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/dp5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray666"
                                android:textSize="@dimen/sp15"
                                android:layout_weight="1"
                                android:text="@string/group_details_to_assistant"/>
                            <com.suke.widget.SwitchButton
                                android:id="@+id/group_detail_swibtn_qunzhu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp10"
                                app:sb_show_indicator="false"
                                app:sb_uncheckcircle_color="@color/swi_nor"
                                app:sb_checked_color="@color/swi_select"
                                android:layout_gravity="center"
                                app:sb_checked="false"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--聊天记录-->
                    <com.mding.chatfeng.about_custom.about_linearlayout.CusLinearLayout
                        android:id="@+id/group_detail_cus_lin_chat_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <!--清空聊天记录-->
                    <com.mding.chatfeng.about_custom.about_linearlayout.CusLinearLayout
                        android:id="@+id/group_detail_cus_lin_clear_chat_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--进入群聊-->
                <TextView
                    android:id="@+id/group_detail_tv_to_chat"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_stroke_sel"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingLeft="@dimen/dp30"
                    android:layout_margin="@dimen/dp50"
                    android:paddingRight="@dimen/dp30"
                    android:text="@string/group_details_btn_start_chat"/>
            </LinearLayout>
        </com.mding.chatfeng.about_custom.CusScrollView>
    </RelativeLayout>

</LinearLayout>
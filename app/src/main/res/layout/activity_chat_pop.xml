<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"/>
    <LinearLayout
        android:id="@+id/cp_lin_window"
        android:layout_width="@dimen/dp200"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pop_chat"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cp_tv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:text="好友资料"
            android:textColor="@color/grey666"
            android:textSize="@dimen/sp16" />
        <View
            style="@style/style_chat_pop_line"
            android:layout_margin="@dimen/dp10"
            />
        <LinearLayout
            android:id="@+id/cp_lin_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="好友分组"
                android:layout_weight="1"
                android:textColor="@color/grey666"
                android:textSize="@dimen/sp16" />
            <TextView
                android:id="@+id/cp_tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grouping"
                android:maxEms="6"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp16" />


        </LinearLayout>

        <View
            style="@style/style_chat_pop_line"
            android:layout_margin="@dimen/dp10"
            />
        <LinearLayout
            android:id="@+id/cp_lin_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="备注"
                android:layout_weight="1"
                android:textColor="@color/grey666"
                android:textSize="@dimen/sp16" />
            <TextView
                android:id="@+id/cp_tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remark"
                android:maxEms="6"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_gravity="right"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/sp16" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

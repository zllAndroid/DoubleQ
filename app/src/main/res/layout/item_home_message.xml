<?xml version="1.0" encoding="utf-8"?>
<com.mding.chatfeng.main_code.ui.about_contacts.about_swipe.BGASwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    app:bga_sil_bottomMode="pullOut"
    app:bga_sil_swipeDirection="left"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_notice_del_menu"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/text_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>


        <RelativeLayout
            android:id="@+id/item_msg_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <!--<com.rance.chatui.CircleImageView-->
                <ImageView
                    android:id="@+id/item_iv_head"
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/grey333"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/item_tv_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/grey999"
                        android:textSize="@dimen/sp13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp5"
                        android:gravity="center"
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/item_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp10"
                        android:visibility="invisible" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/item_tv_click_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dp10"
                    app:srcCompat="@drawable/home_msg_edit" />
                <!--<TextView-->
                <!--android:id="@+id/item_tv_click_ok"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginLeft="@dimen/dp5"-->
                <!--android:background="@drawable/btn_stroke_sel"-->
                <!--android:gravity="center"-->
                <!--android:paddingBottom="@dimen/dp5"-->
                <!--android:paddingLeft="@dimen/dp10"-->
                <!--android:paddingRight="@dimen/dp10"-->
                <!--android:paddingTop="@dimen/dp5"-->
                <!--android:text="编辑"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/sp14" />-->


            </LinearLayout>

            <View
                style="@style/style_wei_line"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


    <!--<include layout="@layout/item_noice" />-->

</com.mding.chatfeng.main_code.ui.about_contacts.about_swipe.BGASwipeItemLayout>
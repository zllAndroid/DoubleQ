<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/activity_include_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_record_iv_find"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/add_friend_find"
                    />
                
                <EditText
                    android:id="@+id/search_record_ed_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="@dimen/sp14"
                    android:hint="@string/search_title"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/gray666"
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_marginRight="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@null"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/search_record_iv_close"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    app:srcCompat="@drawable/seach_close"
                    android:layout_marginRight="@dimen/dp10"
                    />
            </LinearLayout>

            <View
                style="@style/style_wei_line"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp5"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_record_lin_noSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText1"
            android:visibility="gone"
            android:background="#60c0c0c0" >
            <TextView
                android:id="@+id/search_record_tv_noSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp50"
                android:text="@string/search_none"
                android:layout_marginBottom="@dimen/dp50"
                android:textColor="@color/gray666"
                android:textSize="@dimen/sp16"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_record_lin_recyc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayeee"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_record_recyc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>